generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  email     String    @unique
  password  String
  picture   String?   @default("image.jpg")
  about     String?   @default("")
  createdAt DateTime  @default(now())
  blogs     Blog[]
  comments  Comment[]
}

model Blog {
  id        Int        @id @default(autoincrement())
  userId    Int
  title     String
  subtitle  String?
  content   String
  picture   String?    @default("image.jpg")
  createdAt DateTime   @default(now())
  comments  Comment[]
  category  Categories @default(uncategorized)
  user      User       @relation(fields: [userId], references: [id])
}

enum Categories {
  commercial
  design
  nature
  people
  photography
  tech
  travel
  uncategorized
}

model Comment {
  id        Int      @id @default(autoincrement())
  blogId    Int
  userId    Int
  content   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  blog      Blog     @relation(fields: [blogId], references: [id], onDelete: Cascade)
}
